extends ../layout/master

block content

    h1 Login

    if errors
        each err in errors
            .alert.alert-danger= err

    form(method="POST", action="/auth/login")
        label Name
        input(type="text", name="email", class="form-control", value=values ? values.email : "")

        label Password
        input(type="password", name="password", class="form-control", value=values ? values.password : "")

        button(class="btn btn-primary mt-4") Login